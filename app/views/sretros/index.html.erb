<div class="container">

	<div class="panel panel-default">
			<div class="panel-heading">
				<h1>Retro List</h1>
			</div>
			<div class="panel-body">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Retro Title</th>
							<td></td>
							<th>Created</th>
						</tr>
					</thead>
					<% @sretros.each do |retro| %>
						<tbody>
							<tr>
								<th scope="row"><%= link_to retro.title, new_sretro_note_path(retro) %></th>
								<td><p><%= link_to "Summary", sretro_notes_path(retro)%></p></td>
								<td><%= time_ago_in_words(retro.created_at) %> ago</td>
							</tr>
						</tbody>
					<% end %>
				</table>
			</div>
			<% if current_user.is_team_lead? %>
				<div class="panel-footer">
					<%= link_to "Create new retro", new_sretro_path %>
				</div>
			<% end %>
	</div>
</div>