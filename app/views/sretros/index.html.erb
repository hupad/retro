<div class="container">
	<div class="panel panel-default">
			<div class="panel-heading">
				<h1>Sprints List</h1>
			</div>
			<div class="panel-body">
				<% @sretros.each do |sprint| %>
					<p>
						<%= link_to sprint.title, sretro_new_retro_notes_path(sprint) %>
					</p>
				<% end %>
			</div>
			<% if current_user.is_team_lead? %>
				<div class="panel-footer">
					<%= link_to "Create new retro", new_sretro_path %>
				</div>
			<% end %>
	</div>
</div>