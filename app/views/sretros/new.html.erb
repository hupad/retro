<div class="container">
	
	<%= form_for @sretro, url: :sretros do |f| %>
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="panel-title">
					<h1>Create new Retro</h1>
				</div>
			</div>
			<div class="panel-body ">
				<div class="form-group">
					<%= f.text_field :title, class: "form-control"%>	
				</div>
				<div class="form-group">
					<%= f.select(:style, options_for_select([ ['Select retro style', ""], ['Basic', "Basic"], ['Star Fish', "Star Fish"] ]), class: 'form-control' ) %>
				</div>	
			</div>
			<div class="panel-footer">
				<%= f.submit "Create", class: 'btn btn-lg btn-primary' %>
			</div>
		</div>
	<% end %>
</div>